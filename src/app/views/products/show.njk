{% extends "layout.njk" %}

{% block content %}

  <section class="product-single conatainer">

    <div class="gallery">
      <img src="http://placehold.it/500x500?text=PRODUTO SEM FOTO">
    </div>

    <div class="info">
      <h1>{{product.name}}</h1>

      <div class="published">
        Publicado em {{product.published.day}} às {{product.published.hour}}
      </div>

      <div class="description">
        {{product.description}}
      </div>

      <div class="price-buy">
        <div class="price">
          {{product.price}}

          {% if product.price !== product.oldPrice %}
            <span class="old">R$ 89,00</span>
          {% endif %}
        </div>

        <div class="buy">
          {% if product.status == 0 %}
            <p class="unavailable">Produto indisponível</p>
          {% elseif product.quantity == 0 %}
            <p class="unavailable">Fora de estoque</p>
          {% else %}
            <button class="button">Comprar</button>
          {% endif %}
        </div>
      </div>

    </div>

  </section>

{% endblock content %}